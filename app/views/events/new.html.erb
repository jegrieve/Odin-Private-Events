<h1>New Event</h1>

<%= form_with model: @event, local: true do |f| %>

<div>
<%= f.label :name %>
<%= f.text_field :name %>
</div>
<div>
<%= f.label :date %>
<%= f.date_select :date %>
</div>
<div>
<%= f.label :location %>
<%= f.text_area :location %>
</div>
<div>
<%= f.label :description %>
<%= f.text_area :description %>
</div>
<%= f.submit "Create Event"%>
<% end %>