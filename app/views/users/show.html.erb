<h1>User</h2>

Name: <%= @user.name %>

<% if @user.created_events.empty? %>
<div>
    The user has not created any events
</div>
<% else %>
<div>
Events:
    <ul>
    <% @user.created_events.each do |event| %>
    <li><%= event.description %></li>
    <% end %>
    </ul>
<% end %>
</div>

<%= link_to "Create Event", new_event_path %>

